# unalias all previously defined aliases
unalias -a

# generic
alias realias='unalias -a; . ~/.zsh_aliases'
alias grep='\grep --color=auto'
alias l='\ls -lFGh --color=auto'
alias ls='\ls -CFGh --color=auto'
alias lsdir='\ls -lFh --color=auto | grep "^d"'
alias rd='rmdir'
alias md='mkdir'
alias cls='clear'
alias ssh='\ssh -XY'
alias hh='history'
alias tm='tmux'
alias tml='tmux list-sessions'

# docker
alias di='docker images | sort'
alias drm='docker rmi -f'
alias dc='docker commit'
alias dps='docker ps'
alias dtag='docker tag'
alias ddf='docker system df'

# git
alias gs='git status'
alias gps='git add .; git commit -m "updated"; git push'
alias gpl='git pull'
